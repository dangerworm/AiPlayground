{
  "openapi": "3.0.4",
  "info": {
    "title": "AiPlayground.Api | v1",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://localhost:7012/"
    }
  ],
  "paths": {
    "/Character/CreateCharacter": {
      "post": {
        "tags": [
          "Character"
        ],
        "operationId": "CreateCharacter",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateCharacterInputModel"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateCharacterInputModel"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CreateCharacterInputModel"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/CharacterViewModel"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CharacterViewModel"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/CharacterViewModel"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/Playground/GetPlaygroundSetup": {
      "get": {
        "tags": [
          "Playground"
        ],
        "operationId": "GetPlaygroundSetup",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/PlaygroundViewModel"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PlaygroundViewModel"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/PlaygroundViewModel"
                }
              }
            }
          }
        }
      }
    },
    "/Playground/Iterate": {
      "post": {
        "tags": [
          "Playground"
        ],
        "operationId": "Iterate",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/PlaygroundViewModel"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PlaygroundViewModel"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/PlaygroundViewModel"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CharacterResponseViewModel": {
        "type": "object",
        "properties": {
          "decisions": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true
          },
          "desires": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true
          },
          "emotion": {
            "type": "string",
            "nullable": true
          },
          "thoughts": {
            "type": "string",
            "nullable": true
          }
        }
      },
      "CharacterViewModel": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "age": {
            "type": "integer",
            "format": "int32"
          },
          "colour": {
            "type": "string",
            "nullable": true
          },
          "grid_position": {
            "$ref": "#/components/schemas/TupleOfintAndint"
          },
          "model": {
            "type": "string",
            "nullable": true
          },
          "responses": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CharacterResponseViewModel"
            },
            "nullable": true
          },
          "questions": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true
          }
        }
      },
      "CreateCharacterInputModel": {
        "required": [
          "colour",
          "grid_position",
          "model"
        ],
        "type": "object",
        "properties": {
          "colour": {
            "type": "string"
          },
          "grid_position": {
            "$ref": "#/components/schemas/TupleOfintAndint2"
          },
          "model": {
            "type": "string"
          }
        }
      },
      "PlaygroundViewModel": {
        "required": [
          "available_models",
          "characters",
          "cell_size",
          "grid_width",
          "grid_height"
        ],
        "type": "object",
        "properties": {
          "available_models": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "characters": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CharacterViewModel"
            }
          },
          "cell_size": {
            "type": "integer",
            "format": "int32"
          },
          "grid_width": {
            "type": "integer",
            "format": "int32"
          },
          "grid_height": {
            "type": "integer",
            "format": "int32"
          },
          "questions": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/QuestionViewModel"
            },
            "nullable": true
          }
        }
      },
      "ProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "nullable": true
          },
          "instance": {
            "type": "string",
            "nullable": true
          }
        }
      },
      "QuestionViewModel": {
        "required": [
          "character_id",
          "question"
        ],
        "type": "object",
        "properties": {
          "character_id": {
            "type": "string",
            "format": "uuid"
          },
          "question": {
            "type": "string"
          }
        }
      },
      "TupleOfintAndint": {
        "required": [
          "item1",
          "item2"
        ],
        "type": "object",
        "properties": {
          "item1": {
            "type": "integer",
            "format": "int32"
          },
          "item2": {
            "type": "integer",
            "format": "int32"
          }
        },
        "nullable": true
      },
      "TupleOfintAndint2": {
        "required": [
          "item1",
          "item2"
        ],
        "type": "object",
        "properties": {
          "item1": {
            "type": "integer",
            "format": "int32"
          },
          "item2": {
            "type": "integer",
            "format": "int32"
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "Character"
    },
    {
      "name": "Playground"
    }
  ]
}
